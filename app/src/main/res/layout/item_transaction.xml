<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingStart="@dimen/paddingStandard"
    android:paddingEnd="@dimen/paddingStandard"
    android:background="@drawable/bg_item_list_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_payoneer"
            android:textSize="@dimen/txtSizeTitle"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code : QN120D00ARS0."
            android:textSize="@dimen/txtSizeStandard"
            android:textStyle="bold"
            android:textColor="@color/color_secondary"/>


    </LinearLayout>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_payoneer_2"/>

</RelativeLayout>